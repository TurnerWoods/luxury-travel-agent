# ================================================================
# LUXURY TRAVEL AGENT - ENVIRONMENT CONFIGURATION
# ================================================================

# Amadeus API (for real flight/hotel data)
# Sign up at: https://developers.amadeus.com
AMADEUS_API_KEY=your_amadeus_api_key
AMADEUS_API_SECRET=your_amadeus_api_secret
AMADEUS_ENVIRONMENT=test

# Downtown Travel (NDC/GDS Consolidator)
DOWNTOWN_API_URL=https://api.downtowntravel.com
DOWNTOWN_API_KEY=your_downtown_key
DOWNTOWN_API_SECRET=your_downtown_secret
DOWNTOWN_IATA_CODE=your_iata_code

# DTT APIs (thebestagent.pro)
DTT_HOTELS_API_URL=https://api.hotels.thebestagent.pro
DTT_HOTELS_API_TOKEN=your_dtt_hotels_token
DTT_AIR_API_URL=https://api.air.thebestagent.pro
DTT_AIR_API_TOKEN=your_dtt_air_token

# WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_APP_SECRET=your_app_secret_for_webhook_validation
WHATSAPP_VERIFY_TOKEN=luxurytravel_webhook_2024

# Airtable (Curated Hotels & Restaurants)
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# API Base URL (for widget callbacks)
API_BASE_URL=http://localhost:8000

# Feature Flags
ENABLE_AMADEUS_API=true
ENABLE_DOWNTOWN_API=false
ENABLE_DTT_API=false
